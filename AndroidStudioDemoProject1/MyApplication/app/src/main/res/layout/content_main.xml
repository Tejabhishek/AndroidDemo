<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tejabhishek.myapplication.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/button"
        android:layout_width="58dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignStart="@+id/checkBox"
        android:layout_y="193dp"
        android:text="Button"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="190dp"
        android:layout_x="97dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="38dp"
        android:layout_x="114dp"
        android:layout_y="263dp"
        android:text="Copyrights Reserved"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="16dp"
        android:layout_x="124dp"
        android:layout_y="44dp"
        android:text="Demo Text"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_x="45dp"
        android:layout_y="117dp"
        android:text="Password"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="106dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="122dp"
        android:layout_height="27dp"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="104dp"
        android:layout_x="118dp"
        android:layout_y="114dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="95dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_x="111dp"
        android:layout_y="210dp"
        android:text="Remember Me"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="139dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="127dp"
        android:layout_y="152dp"
        android:onClick="sendMessage"
        android:text="Button" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_x="119dp"
        android:layout_y="79dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:layout_x="46dp"
        android:layout_y="86dp"
        android:text="Email ID"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="200dp" />

</AbsoluteLayout>
